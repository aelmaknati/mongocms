<html>
  <head>
    <link rel="stylesheet" href="/styles/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/style.css">
    <script src="/js/dependencies/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container" style="padding-top: 30px;">
      <form action="/login" method="post" class="form" style=" width : 400px;margin: auto;background-color: #eee; padding: 20px;box-shadow: 0px 5px 15px 1px; ">
        <div style="text-align: center">
          <img src="/images/icon.png" />
        </div>
        <div class="form-group">
          <label>Login</label>
          <input type="text" name="login" class="form-control">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" class="form-control">
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-primary" class="form-control" style="width: 100%">
        </div>
      </form>
    </div>
  </body>
</html>
