<div class="modal fade" id="addDirModal" tabindex="-1" role="dialog" aria-labelledby="addDirModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/cms/dir" method="POST" enctype="multipart/form-data">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Create directory</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Directory name</label>
            <input type="text" name="name" placeholder="Directory name" class="form-control">
            <input type="hidden" name="node" value="<%=node %>" >
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Create">
        </div>
      </form>
    </div>
  </div>
</div>
